{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "rollup.config.js"]
}
